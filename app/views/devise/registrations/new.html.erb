<div class="modal-header">
	<button type="button" class="close modal_exclusive" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3>Register</h3>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>
<div class="modal-body">  
  <%= devise_error_messages! %>
   
  <div class="field control-group">
  	<%= f.label :username, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.text_field :username, :placeholder=>"Username" %>
  	</div>
  </div>
  
  <div class="field control-group">
  	<%= f.label :email, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.email_field :email, :placeholder=>"Email" %>
  	</div>
  </div>
  
  <div class="field control-group">
  	<%= f.label :password, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.password_field :password, :placeholder=>"Password" %>
  	</div>
  </div>
  
  <div class="field control-group">
  	<%= f.label :password_confirmation, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.password_field :password_confirmation, :placeholder=>"Password confirmation" %>
  	</div>
  </div>
</div>

<div class="modal-footer">
	<div class="controls">


  <div class="submit field">
  	  	<button class="btn modal_exclusive" data-dismiss="modal" aria-hidden="true">Cancel</button>
  	<%= f.submit "Sign up", :class=>"btn btn-primary"%></div>
  </div>
  </div>
<% end %>


