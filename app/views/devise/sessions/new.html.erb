<div class="modal-header">
	<button type="button" class="close modal_exclusive" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3>Sign in</h3>
</div>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class=>'form-horizontal'}) do |f| %>
<div class="modal-body">  
  <div class="field control-group">
  	<%= f.label :login, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.text_field :login, :placeholder=>"Login" %>
  	</div>
  </div>

  

  <div class="field control-group">
  	<%= f.label :password, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.password_field :password, :placeholder=>"Password" %>
  	</div>
  </div>
  
  <% if devise_mapping.rememberable? -%>
  	<div class="field control-group">
  		<div class="controls">
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me, :class=>"checkbox"%>
		</div>
	</div>
  <% end -%>

</div>

<div class="modal-footer">
  	<div class="left">
	  <%= render "devise/shared/links" %>
    </div>
	<div class="controls right">
  		<div class="submit field">
  		<button class="btn modal_exclusive" data-dismiss="modal" aria-hidden="true">Cancel</button>
  		<%= f.submit "Sign in", :class=>"btn btn-primary" %></div>
  	</div>
</div>
<% end %>
